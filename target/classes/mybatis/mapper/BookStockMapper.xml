<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xust.iot.mapper.BookStockMapper">


    <cache></cache>
    <select id="getBookStockByISBN" parameterType="integer" resultType="com.xust.iot.bean.BookStock">
        select * from book_stock
        <where>
            <if test="isbn!=null">isbn=#{isbn}</if>
        </where>
    </select>

    <update id="updateBookStock" >
        update book_stock
        <set>
           stock=stock-#{books}
        </set>
        <where>
            isbn=#{isbn}
        </where>
    </update>

</mapper>
