<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xust.iot.mapper.AccountMapper">

    <cache></cache>
    <!--添加一个账户-->
    <insert id="addAccount" parameterType="com.xust.iot.bean.Account">
       insert into account(username,balance) values(#{username},#{balance})
   </insert>

    <select id="getAllAccount" resultType="com.xust.iot.bean.Account">
        select * from account
    </select>


    <select id="getAccountByUserName" resultType="com.xust.iot.bean.Account">
        select * from account
        <where>
            username=#{username}
        </where>
    </select>

    <update id="updateAccount">
        update account
        <set>
            balance=balance-#{pay}
        </set>
        <where>
            username=#{username}
        </where>
    </update>


</mapper>
